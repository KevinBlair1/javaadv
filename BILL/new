    private void jCheckBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(jCheckBox1.isSelected())
        {
        jTextField2.setEditable(true);
        jTextField2.setText("");
        jTextField2.requestFocus();
        }
        else
        {
        jTextField2.setEditable(false);
        jTextField2.setText("0");
        
        }
    }                                          

