    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    if(jCheckBox1.isSelected() || jCheckBox4.isSelected() || jCheckBox5.isSelected())
    {
       double pen=Double.parseDouble(jTextField2.getText()) *10.00;
       double oil=Double.parseDouble(jTextField8.getText()) *120.00;
       double washing=Double.parseDouble(jTextField3.getText()) *80;
       total=pen+oil+washing;
       String item=String.format("%.2f",total);
       jTextField9.setText(item);
       String amount=String.format("%.2f",total);
       jTextField17.setText(amount);
             
       if(jCheckBox1.isSelected()&&jCheckBox4.isSelected()&&jCheckBox5.isSelected())
       {
           items="three";
       }
       else if(jCheckBox1.isSelected()&&jCheckBox4.isSelected())
       {
           items="two";
       }
       else
       if(jCheckBox1.isSelected())
       {
       items="one";
       }
       else
       {
        jTextArea1.setText("Item is not selected");   
       }
       jTextField15.setText((String)items);   
       }
       else
       {
       jTextArea1.setText("Enter choice Please");
       }
    }                                        

